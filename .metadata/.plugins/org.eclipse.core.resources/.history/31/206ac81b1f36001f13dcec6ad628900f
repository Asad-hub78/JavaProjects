package oops;

public class StringOperations {
	String str1;


	
	
	public String ReverseString(String str1) {
		
		String result = "";

		for (int i = str1.length() - 1; i >= 0; i--) {

			result = result + str1.charAt(i);
		}
		
		return result;
	}
	public boolean ispalindrome(String str1) {
		String result = "";

        
        boolean ans = false;

        for (int i = str1.length() - 1; i >= 0; i--) {
            result = result + str1.charAt(i);
        }

        
        if (str1.equals(result)) {
            ans = true;
        }
        return ans;
	

	}
	}	




